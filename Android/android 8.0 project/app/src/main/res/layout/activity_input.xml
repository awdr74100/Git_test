<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#2b2b2b"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="50dp"
            app:srcCompat="@drawable/page2cat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2b2b2b"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit1"
                android:layout_width="336dp"
                android:singleLine="true"


                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#fff"
                android:hint="請輸入姓名"
                android:textColor="#fff"
                android:drawableLeft="@drawable/page2name"
                android:drawablePadding="10dp"
                android:textColorHint="#8a8989" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2b2b2b"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/edit2"
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#fff"
                android:singleLine="true"
                android:hint="請輸入體重"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#fff"
                android:drawableLeft="@drawable/page2weight"
                android:drawablePadding="10dp"
                android:textColorHint="#8a8989" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2b2b2b"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/edit3"
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#fff"
                android:hint="請輸入年齡"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:drawableLeft="@drawable/page2age"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:textColorHint="#8a8989" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2b2b2b"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            >


            <Button
                android:id="@+id/btn1"
                android:layout_width="336dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:background="#3d3d3d"
                android:textColor="#8a8989"
                android:text="確認" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2b2b2b"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="                   Don't know the age ?"
                android:textColor="#8a8989"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="72dp"
                android:background="#00000000"
                android:text="Click me"
                android:textAllCaps="false"
                android:textColor="#adadad"
                android:textSize="18dp" />

        </LinearLayout>




    </LinearLayout>



</LinearLayout>