<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2b2b2b"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="8dp"
            android:text="您目前位於選單..."
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <Button
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:drawableLeft="@drawable/sidebarstart"
                    android:drawablePadding="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="15dp"
                    android:text="獲取數值"
                    android:textColor="#2b2b2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn1"
                    android:background="#fff" />

                <Button
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:drawableLeft="@drawable/sidebarstop"
                    android:drawablePadding="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="15dp"
                    android:text="暫停獲取"
                    android:textColor="#2b2b2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn2"
                    android:background="#fff" />

                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#eeeeee"
                    />



                <Button
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:drawableLeft="@drawable/sidebarcat"
                    android:drawablePadding="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="15dp"
                    android:text="貓咪數值"
                    android:textColor="#2b2b2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn3"
                    android:background="#fff" />

                <ImageView
                    android:layout_marginTop="140dp"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#eeeeee"
                    />


                <Button
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:drawableLeft="@drawable/sidebarreset"
                    android:drawablePadding="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="15dp"
                    android:text="重設數值"
                    android:textColor="#2b2b2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn4"
                    android:background="#fff" />




                <Button
                    android:gravity="left|center"
                    android:paddingLeft="25dp"
                    android:drawableLeft="@drawable/sidebarabout"
                    android:drawablePadding="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="15dp"
                    android:text="關於"
                    android:textColor="#2b2b2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn5"
                    android:background="#fff" />







            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>